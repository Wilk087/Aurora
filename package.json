{
  "name": "aurora-player",
  "version": "1.0.0",
  "private": true,
  "description": "A beautiful local music player for Linux, inspired by Cider 2",
  "author": {
    "name": "Wilk087",
    "email": "business@wilk087.dev"
  },
  "license": "MIT",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "dist": "npm run build && electron-builder --linux",
    "dist:pacman": "npm run build && electron-builder --linux pacman",
    "dist:appimage": "npm run build && electron-builder --linux AppImage",
    "dist:all": "npm run build && electron-builder --linux pacman AppImage"
  },
  "build": {
    "appId": "com.wilk087.aurora-player",
    "productName": "Aurora Player",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "linux": {
      "target": [
        {
          "target": "pacman",
          "arch": ["x64"]
        },
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png",
      "category": "Audio",
      "desktop": {
        "Name": "Aurora Player",
        "Comment": "A beautiful local music player",
        "Categories": "Audio;Music;Player;AudioVideo",
        "Keywords": "music;player;audio;flac;mp3"
      }
    },
    "pacman": {
      "depends": ["gstreamer", "gst-plugins-base", "gst-plugins-good"]
    },
    "appImage": {
      "license": "LICENSE"
    }
  },
  "dependencies": {
    "@xhayper/discord-rpc": "^1.3.0",
    "bufferutil": "^4.1.0",
    "discord-rpc": "^4.0.1",
    "music-metadata": "^7.14.0",
    "pinia": "^2.1.0",
    "utf-8-validate": "^5.0.10",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "autoprefixer": "^10.4.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.4.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue-tsc": "^1.8.0"
  }
}
