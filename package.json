{
  "name": "aurora-player",
  "version": "2.1.0",
  "private": true,
  "description": "A beautiful local music player for Linux and Windows",
  "author": {
    "name": "Wilk087",
    "email": "business@wilk087.dev"
  },
  "license": "GPL-3.0-or-later",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "dist": "npm run build && electron-builder --linux",
    "dist:pacman": "npm run build && electron-builder --linux pacman",
    "dist:appimage": "npm run build && electron-builder --linux AppImage",
    "dist:win": "npm run build && electron-builder --win",
    "dist:all": "npm run build && electron-builder --linux --win"
  },
  "build": {
    "appId": "com.wilk087.aurora-player",
    "productName": "Aurora Player",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "build/icon.png",
        "to": "icon.png"
      }
    ],
    "linux": {
      "target": [
        "pacman",
        "AppImage"
      ],
      "icon": "build/icons",
      "category": "Audio",
      "executableName": "aurora-player",
      "desktop": {
        "Name": "Aurora Player",
        "Comment": "A beautiful local music player",
        "Categories": "Audio;Music;Player;AudioVideo;",
        "Keywords": "music;player;audio;",
        "StartupWMClass": "aurora-player"
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "pacman": {
      "depends": [
        "gstreamer",
        "gst-plugins-base",
        "gst-plugins-good"
      ]
    }
  },
  "dependencies": {
    "@xhayper/discord-rpc": "^1.3.0",
    "bufferutil": "^4.1.0",
    "dbus-next": "^0.10.2",
    "discord-rpc": "^4.0.1",
    "music-metadata": "^7.14.0",
    "pinia": "^2.1.0",
    "utf-8-validate": "^5.0.10",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "autoprefixer": "^10.4.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.4.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue-tsc": "^1.8.0"
  }
}
